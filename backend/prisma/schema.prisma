generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id                  Int                  @id @default(autoincrement())
  nom                 String
  prenom              String
  email               String               @unique
  adresse             String?
  photo               String?
  login               String               @unique
  password            String
  telephone           String?
  genre               String

  // Relations
  profilId            Int?
  profil              Profil?              @relation(fields: [profilId], references: [id])

  profilSortiId       Int?
  profilSorti         ProfilSorti?         @relation(fields: [profilSortiId], references: [id])

  referentielId       Int?
  referentiel         Referentiel?         @relation(fields: [referentielId], references: [id])

  competences         UtilisateurCompetence[]
  groupes             UtilisateurGroupe[]
  promos              Promotion[]          @relation("PromoFormateurs")

  @@map("User")
}

model Profil {
  id           Int            @id @default(autoincrement())
  nomP         String
  utilisateurs Utilisateur[]
  @@map("Profile")
}

model ProfilSorti {
  id           Int            @id @default(autoincrement())
  nom          String
  utilisateurs Utilisateur[]
}

model Promotion {
  id           Int            @id @default(autoincrement())
  nom          String
  nbrRef       String
  annee        String

  referentiels RefPromo[]
  formateurs   Utilisateur[]   @relation("PromoFormateurs")
  @@map("Promo")
}

model Niveaux {
  id           Int           @id @default(autoincrement())
  nom          String
  competences  Competence[]
  @@map("Niveau")
}

model Competence {
  id           Int           @id @default(autoincrement())
  description  String
  niveauxId    Int?
  niveaux      Niveaux?      @relation(fields: [niveauxId], references: [id])

  utilisateurs UtilisateurCompetence[]
  briefs       BriefCompetence[]
  referentiels RefCompetences[]
}

model Referentiel {
  id           Int           @id @default(autoincrement())
  nom          String

  promotions   RefPromo[]
  utilisateurs Utilisateur[]
  competences  RefCompetences[]
}

model Tag {
  id           Int           @id @default(autoincrement())
  libelle      String
  briefs       BriefTag[]
}

/// ======================
/// Tables de liaison
/// ======================

model RefPromo {
  id             Int         @id @default(autoincrement())
  promotionId    Int
  referentielId  Int
  promotion      Promotion   @relation(fields: [promotionId], references: [id])
  referentiel    Referentiel @relation(fields: [referentielId], references: [id])
}

model RefCompetences {
  id             Int         @id @default(autoincrement())
  referentielId  Int
  competenceId   Int
  referentiel    Referentiel @relation(fields: [referentielId], references: [id])
  competence     Competence  @relation(fields: [competenceId], references: [id])
}

model UtilisateurCompetence {
  id             Int          @id @default(autoincrement())
  utilisateurId  Int
  competenceId   Int
  utilisateur    Utilisateur  @relation(fields: [utilisateurId], references: [id])
  competence     Competence   @relation(fields: [competenceId], references: [id])
}

model UtilisateurGroupe {
  id             Int          @id @default(autoincrement())
  utilisateurId  Int
  groupeId       Int
  utilisateur    Utilisateur  @relation(fields: [utilisateurId], references: [id])
  groupe         Groupe       @relation(fields: [groupeId], references: [id])
}

/// ======================
/// Mod√®les manquants
/// ======================

model BriefCompetence {
  id           Int         @id @default(autoincrement())
  briefId      Int
  competenceId Int
  brief        Brief       @relation(fields: [briefId], references: [id])
  competence   Competence  @relation(fields: [competenceId], references: [id])
}

model BriefTag {
  id       Int   @id @default(autoincrement())
  briefId  Int
  tagId    Int
  brief    Brief @relation(fields: [briefId], references: [id])
  tag      Tag   @relation(fields: [tagId], references: [id])
}

model Groupe {
  id            Int                @id @default(autoincrement())
  nom           String
  utilisateurs  UtilisateurGroupe[]
}

model Brief {
  id           Int               @id @default(autoincrement())
  titre        String
  description  String?
  competences  BriefCompetence[]
  tags         BriefTag[]
}


